{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "redirects": [
    {
      "source": "/(.*)\\.html$",
      "destination": "/$1",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/admin.html",
      "destination": "/admin",
      "permanent": true
    },
    {
      "source": "/home.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/Blog.html",
      "destination": "/blog",
      "permanent": true
    },
    {
      "source": "/quotebook.html",
      "destination": "/quotebook",
      "permanent": true
    },
    {
      "source": "/other.html",
      "destination": "/other",
      "permanent": true
    },
    {
      "source": "/basement.html",
      "destination": "/basement",
      "permanent": true
    },
    {
      "source": "/about.html",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/sitemap.html",
      "destination": "/sitemap",
      "permanent": true
    }
  ]
}
